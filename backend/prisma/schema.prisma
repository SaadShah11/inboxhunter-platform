// InboxHunter Platform - Database Schema
// Using Prisma ORM with PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== Users ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  avatar        String?
  
  // Subscription
  plan          Plan      @default(FREE)
  planExpiresAt DateTime?
  
  // Settings
  settings      Json      @default("{}")
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  
  // Relations
  agents        Agent[]
  credentials   Credential[]
  tasks         Task[]
  signups       Signup[]
  apiKeys       ApiKey[]
  
  @@index([email])
}

enum Plan {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

// ==================== Agents ====================

model Agent {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Identity
  name          String
  machineId     String      @unique
  token         String      @unique
  
  // Status
  status        AgentStatus @default(OFFLINE)
  lastSeenAt    DateTime?
  version       String?
  
  // Machine info
  os            String?
  osVersion     String?
  
  // Config pushed to agent
  config        Json        @default("{}")
  
  // Timestamps
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relations
  tasks         Task[]
  signups       Signup[]
  logs          AgentLog[]
  
  @@index([userId])
  @@index([token])
  @@index([status])
}

enum AgentStatus {
  OFFLINE
  ONLINE
  RUNNING
  PAUSED
  ERROR
}

model AgentLog {
  id        String   @id @default(cuid())
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  level     String   // info, warning, error
  message   String
  metadata  Json?
  
  createdAt DateTime @default(now())
  
  @@index([agentId])
  @@index([createdAt])
}

// ==================== Credentials ====================

model Credential {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Identity
  name        String   @default("Default")
  isDefault   Boolean  @default(false)
  
  // Form fields
  firstName   String
  lastName    String?
  fullName    String?
  email       String
  phoneCountryCode String @default("+1")
  phoneNumber String?
  phoneFull   String?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  tasks       Task[]
  
  @@index([userId])
}

// ==================== Tasks ====================

model Task {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Assignment
  agentId       String?
  agent         Agent?     @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  // Credentials to use
  credentialId  String?
  credential    Credential? @relation(fields: [credentialId], references: [id], onDelete: SetNull)
  
  // Task details
  type          TaskType   @default(SIGNUP)
  status        TaskStatus @default(PENDING)
  priority      Int        @default(0)
  
  // For signup tasks
  url           String?
  source        String?    // meta, csv, manual
  
  // For scrape tasks
  scrapeParams  Json?
  
  // Results
  result        Json?
  error         String?
  
  // Timing
  scheduledAt   DateTime?
  startedAt     DateTime?
  completedAt   DateTime?
  
  // Timestamps
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  // Relations
  signup        Signup?
  
  @@index([userId])
  @@index([agentId])
  @@index([status])
  @@index([createdAt])
}

enum TaskType {
  SIGNUP
  SCRAPE
  VERIFY
}

enum TaskStatus {
  PENDING
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// ==================== Signups ====================

model Signup {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Task reference
  taskId          String?      @unique
  task            Task?        @relation(fields: [taskId], references: [id], onDelete: SetNull)
  
  // Agent that performed signup
  agentId         String?
  agent           Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  // Target
  url             String
  landingUrl      String?
  source          String?      // meta, csv, manual
  
  // Result
  status          SignupStatus @default(PENDING)
  platform        String?      // clickfunnels, gohighlevel, etc
  
  // Form data
  fieldsFilledRaw Json?        // Raw fields filled
  emailUsed       String?
  
  // Error info
  errorType       String?
  errorMessage    String?
  screenshotUrl   String?
  
  // Timing
  processingTime  Float?       // seconds
  
  // Timestamps
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([url])
}

enum SignupStatus {
  PENDING
  SUCCESS
  FAILED
  DUPLICATE
}

// ==================== API Keys ====================

model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  keyHash     String   @unique
  keyPrefix   String   // First 8 chars for display
  
  // Permissions
  permissions Json     @default("[]")
  
  // Usage
  lastUsedAt  DateTime?
  usageCount  Int      @default(0)
  
  // Timestamps
  createdAt   DateTime @default(now())
  expiresAt   DateTime?
  
  @@index([userId])
  @@index([keyHash])
}

// ==================== Settings (Global) ====================

model Setting {
  key       String   @id
  value     Json
  updatedAt DateTime @updatedAt
}

