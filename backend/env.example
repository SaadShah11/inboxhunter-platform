# InboxHunter Platform - Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/inboxhunter?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Agent Settings
AGENT_TOKEN_EXPIRES_IN="30d"

# AWS S3 (for screenshots and downloads)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET="inboxhunter-storage"

# Optional: External Services
# SENDGRID_API_KEY=""
# STRIPE_SECRET_KEY=""

