# ============================================
# InboxHunter Platform - Environment Variables
# ============================================
# Copy this file to .env and update values
# cp env.example .env
# ============================================

# ===================
# Database (PostgreSQL Docker)
# ===================
POSTGRES_USER=inboxhunter
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=inboxhunter
DB_HOST=localhost
DB_PORT=5432

# ===================
# Backend API
# ===================
NODE_ENV=development
API_PORT=3001
PORT=3001

# JWT Authentication (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# CORS (update with your frontend URL)
CORS_ORIGIN="http://localhost:3000"

# Agent Settings
AGENT_TOKEN_EXPIRES_IN="30d"

# ===================
# Frontend
# ===================
WEB_PORT=3000
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ===================
# AWS S3 (Screenshots & Downloads)
# ===================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET="inboxhunter-storage"
